<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16sp"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:hint="Số tiền"
        android:id="@+id/ed_money_requiment"/>

    <EditText
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:id="@+id/ed_description_requiment"/>

    <EditText
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ"
        android:inputType="text"
        android:id="@+id/ed_address_requiment"/>

    <Spinner
        android:id="@+id/sp_type_room_requiment"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spTypeRoom"/>
    <Button
        android:id="@+id/btn_finish_requiment"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"/>
</LinearLayout>
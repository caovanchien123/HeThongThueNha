<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
android:paddingBottom="20dp"
android:layout_width="match_parent"
android:orientation="vertical"
android:gravity="center"
xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:background="@drawable/person_radius_boder"
    android:padding="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/person_image_item"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/person_image_infomation"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/person_image_item"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/person_number_person"
            android:textColor="#888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tim Nguoi Thue: 3"/>
        <TextView
            android:id="@+id/person_name_home"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phong Cho Thue 4f, Quan 7"/>
        <TextView
            android:id="@+id/person_price_home"
            android:textColor="#FF0370"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.5 Trieu VND/Phong"/>
        <TextView
            android:id="@+id/person_diachi"
            android:textColor="#888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="127-129-Dao duy anh, P"/>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>
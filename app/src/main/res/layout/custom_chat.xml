<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
    android:weightSum="2">


    <LinearLayout
        android:id="@+id/linear_custom_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_custom_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="16sp"
            android:text="Hello nha"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_custom_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            app:cardCornerRadius="10sp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearImage"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_custom_chat"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/home" />


                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_address_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="Địa chỉ"
                    android:textColor="@color/white" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_price_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="Giá:"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/linear_footer_custom_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type_room_chat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Loại:"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/img_agree_chat"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:src="@drawable/ic_baseline_check_circle_outline_24" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>
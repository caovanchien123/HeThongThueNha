<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cv_custom_report"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="16sp"
    app:cardCornerRadius="10sp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/red_400"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16sp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_custom_title_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Phòng Trọ:trọ linh xuân cao cấp "/>

        <TextView
            android:id="@+id/tv_custom_type_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_100"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:text="LOẠI:Không đúng với yêu cầu gốc "/>

        <TextView
            android:id="@+id/tv_custom_description_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingExtra="8sp"
            android:layout_marginTop="10sp"
            android:text="@string/test_description"/>
        <TextView
            android:id="@+id/tv_custom_email_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Unknown"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
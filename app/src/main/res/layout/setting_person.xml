<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroud_person_navigation"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:background="@drawable/corner_radius_content"
        android:layout_marginTop="-80dp"
        android:layout_below="@+id/person_view_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbars="vertical"
            android:id="@+id/person_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"/>
    </RelativeLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/person_view_2"
        android:orientation="horizontal"
        android:layout_width="match_parent">
        <View
            android:layout_weight=".4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_weight=".1"
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/person_view_1"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="100dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@mipmap/ic_launcher"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/person_view_1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/person_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Pham Thanh Huy"/>
                    <TextView
                        android:id="@+id/person_tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="PhamThanhHuy@gmail.com"/>
                    <TextView
                        android:id="@+id/person_tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:text="100.000 Ä‘"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_weight=".4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:background="@drawable/person_radius_boder"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/person_image_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/person_image_infomation"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/person_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuc Nang"
                android:layout_below="@+id/person_image_item"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
</LinearLayout>
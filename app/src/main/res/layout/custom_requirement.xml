<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:layout_marginTop="15sp"
    app:contentPadding="16sp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/teal_200"
    android:id="@+id/cv_custom_requirement"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_custom_person_requirement"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_person_24"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_custom_name_requirement"
            android:text=""
            android:gravity="bottom"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_custom_price_requiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="15sp"
            android:text="Giá:75.000"/>

        <TextView
            android:id="@+id/tv_custom_address_requiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:text="Vị trí:Phường Linh xuân quận 2"/>

        <TextView
            android:id="@+id/tv_custom_type_room_requiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:text="Kiểu phòng:Nhà nguyên căn"/>
    </LinearLayout>
        <ImageView
            android:id="@+id/img_custom_edit_requirement"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_baseline_edit_24"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="8sp"
    tools:context=".CreateRoom.Fragment.fragment_living_expenses">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledMoneyWater"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Nước">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etWater"
            android:backgroundTint="@color/white"
            android:inputType="numberDecimal"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/cbFreeWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Miễn phí"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledMoneyElectricity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Điện">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20sp"
                android:id="@+id/etElectricity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/cbFreeElectricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miễn phí"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledMoneyInternet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Cáp quang">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etInternet"
                android:backgroundTint="@color/white"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/cbFreeInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miễn phí"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Truyền hình">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etTV"
                android:backgroundTint="@color/white"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/cbFreeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miễn phí"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledMoneyParkingSpace"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Chỗ để xe">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etParkingSpace"
                android:backgroundTint="@color/white"
                android:inputType="numberDecimal"
                android:maxEms="20"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/cbParkingspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miễn phí"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnFinishStage2"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"/>


</LinearLayout>
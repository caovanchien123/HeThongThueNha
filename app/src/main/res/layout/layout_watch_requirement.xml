<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="16sp"
    android:backgroundTint="@color/green_200"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_added_requirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 Giờ trước"
            android:textColor="@color/pink_300"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_description_requirement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:text="Day la description"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel_requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Tắt"
                android:textColor="@android:color/holo_orange_dark" />

            <Button
                android:id="@+id/btn_contact_requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:background="@android:color/transparent"
                android:text="Trả lời"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
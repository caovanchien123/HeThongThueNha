<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".Adminstrator.Fragment.fragment_add_point">

    <Spinner
        android:id="@+id/sp_email_person_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:entries="@array/spAccount"
        android:paddingBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:hint="Email người dùng" />

    <Spinner
        android:id="@+id/sp_id_person_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spAccount"
        android:paddingTop="10sp"
        android:clickable="false"
        android:paddingBottom="10sp"
        android:layout_marginTop="10sp"/>



    <EditText
        android:id="@+id/ed_bank_credit"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:hint="Số tài khoản" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filledTitle"
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:hint="Số tiền nạp"
        android:textColorHint="@android:color/darker_gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNumberPointAdded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/white"
            android:inputType="numberDecimal"
            android:maxLength="20"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnFinishCredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"
        android:layout_marginTop="20sp"/>
</LinearLayout>
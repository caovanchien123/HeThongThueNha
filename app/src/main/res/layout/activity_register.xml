<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@drawable/background" android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="150dp"
            android:background="@drawable/custom_form"
            android:id="@+id/login_layout_main"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="360dp"
            android:layout_height="550dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/chewy"
                android:text="SIGN UP"
                android:textColor="#4A4A4A"
                android:textSize="30dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/registerEmail"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/image_user"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/registerPassword"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/image_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/registerRepassword"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/image_password"
                android:hint=" Repassword"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/registerUsername"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/image_mail"
                android:hint="Name"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/registerContact"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/image_phone"
                android:hint="Contact"
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <Button
                android:id="@+id/btnHaveAccountReady"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"
                android:textColor="#2196F3"/>
            <Button
                android:id="@+id/btnRegister"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:background="@drawable/cricle_image"
            android:padding="23dp"
            android:src="@drawable/home"
            android:layout_alignTop="@id/login_layout_main"
            android:layout_marginTop="-80dp"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </RelativeLayout>
</ScrollView>
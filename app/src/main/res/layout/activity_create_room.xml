<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateRoom.CreateRoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_create_room"
        android:gravity="center"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt phòng"
            android:id="@+id/actionBarTitle"
            android:textSize="20dp"
            android:layout_marginLeft="30sp"
            android:textColor="@color/black"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            android:fontFamily="monospace"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearStage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStage1"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_baseline_info_24"/>
            <TextView
                android:id="@+id/tvStage1"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Mô tả"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/linearStage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStage2"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_baseline_eco_24"/>
            <TextView
                android:id="@+id/tvStage2"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Sinh Hoạt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/linearStage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStage3"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_baseline_image_24"/>
            <TextView
                android:id="@+id/tvStage3"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Hình ảnh"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/linearStage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStage4"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/ic_baseline_wb_incandescent_24"/>
            <TextView
                android:id="@+id/tvStage4"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Tiện ích"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4sp"
        android:background="@android:color/darker_gray"/>

    <FrameLayout
        android:id="@+id/frameContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>




</LinearLayout>
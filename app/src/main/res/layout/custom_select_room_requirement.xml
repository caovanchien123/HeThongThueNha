<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cv_room_requirement"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/pink_300"
    android:orientation="horizontal"
    android:padding="16sp"
    app:cardCornerRadius="10sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10sp"
            android:id="@+id/img_custom_room_requiment"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_margin="16sp"
            android:scaleType="fitXY"
            android:src="@drawable/insert_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:id="@+id/tv_title_room_requirement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Phòng trọ cao cấp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_address_room_requirement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="90 Đường nam cao"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_price_room_requirement"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="900.000 VNĐ"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
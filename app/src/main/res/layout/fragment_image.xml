<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="10sp"
    tools:context=".CreateRoom.Fragment.fragment_image">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imgRoom1"
        android:layout_width="160sp"
        android:layout_height="160sp"
        android:src="@drawable/insert_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24sp"
        android:layout_toRightOf="@id/imgRoom1"
        android:text="Ảnh Main"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgRoom1"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgRoom2"
                android:layout_width="100sp"
                android:src="@drawable/insert_image"
                android:layout_height="100sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh 1"/>
        </LinearLayout>

        <LinearLayout
            android:padding="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgRoom3"
                android:layout_width="100sp"
                android:src="@drawable/insert_image"
                android:layout_height="100sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh 2"/>
        </LinearLayout>


        <LinearLayout
            android:padding="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgRoom4"
                android:layout_width="100sp"
                android:src="@drawable/insert_image"
                android:layout_height="100sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh 3"/>
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btnFinishStage3"
        android:layout_width="match_parent"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:text="Hoàn tất"/>

</RelativeLayout>
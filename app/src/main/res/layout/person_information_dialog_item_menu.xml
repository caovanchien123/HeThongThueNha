<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    android:minWidth="400dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:paddingBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuy Chon"
        android:textSize="32sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/person_information_edit"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/peson_information_edit"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Chinh sua"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/person_information_delete"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person_information_delete"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Xoa"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/person_information_qc"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person_information_qc"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Quang cao"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/person_information_NguoiThue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person_information_user"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Danh sach nguoi thue"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>